<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JokenPo.Views.JokenViewxaml"
             Title="JokenViewxaml">
    <VerticalStackLayout>
        <Image
            Source="{Binding Imagem}"
            />

        <Label
            Text="{Binding Resultado}"
            />

        <Picker
            Title="Selecione uma opcao"
            SelectedItem="{Binding Escolha}">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>pedra</x:String>
                    <x:String>papel</x:String>
                    <x:String>tesoura</x:String>
                </x:Array>
            </Picker.ItemsSource>


        </Picker>

        <Button   
         Text="Jogar"
         Command="{Binding JogarCommand}"
         />
    </VerticalStackLayout>
</ContentPage>